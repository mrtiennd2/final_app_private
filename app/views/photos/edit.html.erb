<div class='h-100 w-75 bg-white mx-auto p-4'>
  <div class='d-flex justify-content-between'>
    <p class='h4'><strong>Edit photo</strong></p>
    <%= link_to "Back", :back, class: 'btn btn-primary' %>
  </div>

  <hr />
  <%= render "form", photo: @photo %>

  <div class='mx-3 d-flex' style='gap: 2px'>
    <%= button_to "Save", @photo, method: :put, class: 'btn btn-primary' %>
    <%= button_to "Delete", @photo, method: :delete, class: 'btn btn-danger' %>
  </div>
</div>
