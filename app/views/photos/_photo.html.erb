<div class="card d-flex flex-row flex-wrap bg-light shadow p-0 rounded m-2 me-auto">
    <div class="p-2", style="width: 200px; height: 200px;">
        <img
            class="border border-dark w-100 h-100"
            src="<%= photo.image_url %>"
        />
    </div>

    <div class="card-body d-flex p-2" style="width: 300px;">
        <div class="d-flex flex-column w-100 h-100">
            <div class='border-bottom border-light'>
                <p class="h5 text text-primary">
                    <strong>
                        <%= photo.user.email %>
                    </strong>
                </p>
            </div>

            <div class='flex-grow-1 py-3'>
                <p class='h5'>
                    <strong>
                        <%= photo.title %>
                    </strong>
                </p>

                <div>
                    <%= photo.description %>
                </div>
            </div>

            <div class="d-flex flex-row justify-content-end align-items-end">
                <small>
                    <%= photo.created_at %>
                </small>
            </div>
        </div>
    </div>
</div>

