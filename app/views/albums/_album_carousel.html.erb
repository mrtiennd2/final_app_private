<div id="albumCarouselIndicators<% model.id %>" class="carousel slide" data-ride="carousel">
  <div class="carousel-inner">
    <% model.photos.each do |photo| %>
      <div class="carousel-item">
        <div class='w-100 h-100 d-flex justify-content-center align-items-center'>
          <img class="w-100 h-100 object-fit-cover" src="<%= photo.image_url.url %>" alt="First slide">
        </div>
      </div>
    <% end  %>
  </div>
  <a class="carousel-control-prev" href="#albumCarouselIndicators<% model.id %>" role="button" data-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="carousel-control-next" href="#albumCarouselIndicators<% model.id %>" role="button" data-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
</div>

<script>
  (function() {
    const carouselInners = document.querySelectorAll('.carousel-inner');
    carouselInners.forEach(ci => {
      ci.childNodes[1]?.classList.add('active');
    });
  })();
</script>

