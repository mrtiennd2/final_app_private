<div class='h-100 w-75 bg-white mx-auto p-3'>
    <p class='h4'>
        <strong> My Albums </strong>
    </p>

    <div class='d-flex flex-column flex-wrap' >
        <!-- <p style="color: green"><%= notice %></p> -->
        <div id="albums" class='d-flex flex-wrap justify-content-start'>
            <% @albums.each do |album| %>
            <div class="p-2 mb-2 d-flex flex-column justify-content-center align-items-center">
                <div class='mb-2' style="width:200px; height: 200px">
                    <img
                        class="border border-dark w-100 h-100"
                        src="/postboot/assets/img/thumbnail.jpg"
                    />
                </div>
                <%= link_to "Show this album", album, class: 'btn btn-dark mx-auto' %>
            </div>
        </div>
        <% end %>
    </div>
</div>

