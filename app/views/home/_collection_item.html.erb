<div
  class="card d-flex flex-row flex-wrap bg-light shadow p-0 rounded m-2 me-auto"
>
  <div class="p-2", style="width: 200px; height: 200px; cursor: pointer">
    <div
      data-toggle="modal"
      data-target="<%= modal_data_target %>"
      class="w-100 h-100 border border-secondary"
    >
      <% if model_image_url %>
        <img
        class="w-100 h-100"
        src="<%= model_image_url %>"
        />
      <% end %>
    </div>
  </div>

  <div class="card-body d-flex p-2" style="width: 300px;">
    <div class="d-flex flex-column w-100 h-100">
      <div class='border-bottom border-light d-flex aligns-items-center' style='margin-left: -5px;'>
        <% if !model.user.avatar? %>
          <a
            href="<%= edit_user_registration_path %>",
            class='text-white d-flex justify-content-center align-items-center text-decoration-none'
            style='width: 40px; height: 40px; border-radius: 100%; background-color: #3269a8;'
            >
            <strong>
              <%  fst_char = model.user.first_name? ? model.user.first_name.first.upcase : "" %>
              <%  snd_char = model.user.last_name? ? model.user.last_name.first.upcase : "" %>
              <%  alt_str = fst_char + snd_char %>
              <%= alt_str %>
            </strong>
          </a>
        <% else %>
          <div style='width: 40px; height: 40px; border: 1px solid black; border-radius: 100%; overflow: hidden'>
            <%= link_to edit_user_registration_path do %>
              <img
              class="w-100 h-100"
              src="<%= model.user.avatar %>"
              />
            <% end %>
          </div>
        <% end %>

        <p class="d-flex m-0 p-0 justiy-content-center align-items-center ml-2" style='color: #3269a8'>
          <strong>
            <% fname = model.user.first_name || " " %>
            <% lname = model.user.last_name || " " %>
            <% display_name = fname + " " + lname %>
            <%= display_name %>
          </strong>
        </p>
      </div>

      <div class='d-flex flex-column flex-fill py-3'>
        <p class='h5 m-0'>
        <strong>
          <%= model.title %>
        </strong>
        </p>

        <div
          class='flex-fill'
          style='max-height: 55px; overflow: hidden;'
          >
            <%= model.description %>
        </div>
      </div>

      <div class="d-flex flex-row justify-content-between align-items-center">
        <% like_count = Like.where(likeable_id: model.id).size %>
        <% has_likes = current_user && current_user.likes.find_by(likeable: model) && 'text-primary' %>
        <%= link_to photo_like_path(model), remote: true, data: { 'turbo-method' => :post }, class: 'text-decoration-none' do %>
          <button class="like__btn btn bg-light p-0 text <%= has_likes %>">
            <i class="fa-solid fa-heart"></i>
          </button>
          <span>
            <small>
              <%= like_count > 0 ? like_count : "" %>
            </small>
          </span>
        <% end %>
        <small>
          <%= format_date(model.created_at) %>
        </small>
      </div>

    </div>
  </div>
</div>

<script>
  (function() {
    const likeBtn = document.querySelector('.like__btn');
    likeBtn.addEventListener('click', (e) => {
      likeBtn.classList.toggle('text-primary');
    });
  })();
</script>

