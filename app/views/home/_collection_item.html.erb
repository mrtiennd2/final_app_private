<div
  class="card d-flex flex-row flex-wrap bg-light shadow p-0 rounded m-2 me-auto"
  data-toggle="modal"
  data-target="<%= modal_data_target %>"
>
  <div class="p-2", style="width: 200px; height: 200px; cursor: pointer">
    <div class="w-100 h-100 border border-secondary">
      <% if model_image_url %>
        <img
        class="w-100 h-100"
        src="<%= model_image_url %>"
        />
      <% end %>
    </div>
  </div>

  <div class="card-body d-flex p-2" style="width: 300px;">
    <div class="d-flex flex-column w-100 h-100">
      <div class='border-bottom border-light'>
        <p class="h5 text text-primary">
        <strong>
          <%= model.user.email %>
        </strong>
        </p>
      </div>

      <div class='flex-grow-1 py-3'>
        <p class='h5'>
        <strong>
          <%= model.title %>
        </strong>
        </p>

        <div>
          <%= model.description %>
        </div>
      </div>

      <div class="d-flex flex-row justify-content-end align-items-end">
        <small>
          <%= model.created_at %>
        </small>
      </div>
    </div>
  </div>
</div>

