<div class='container d-flex flex-column align-items-center'>
  <h1 class='text text-secondary my-4'>
    <%= t('.title') %>
  </h1>

  <%= form_for(
    resource, as: resource_name,
    url: registration_path(resource_name),
    html: {
      class: 'w-50 p-5 border rounded shadow rounded bg-light',
    }
  ) do |f| %>

  <div class="field form-label mb-3">
    <strong>
        <%= f.label :first_name %><br />
    </strong>

    <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name",  class: 'form-control form-control-lg', placeholder: t('first_name') %>
    <% if resource.errors[:first_name].size > 0 %>
      <span class='text text-danger'>
        *<%= resource.errors[:first_name].first %>
      </span>
    <% end %>
  </div>

  <div class="field form-label mb-3">
    <strong>
        <%= f.label :last_name %><br />
    </strong>

    <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name",  class: 'form-control form-control-lg', placeholder: t('last_name') %>
    <% if resource.errors[:last_name].size > 0 %>
      <span class='text text-danger'>
        *<%= resource.errors[:last_name].first %>
    </span>
  <% end %>
  </div>

  <div class="field form-label mb-3">
    <strong>
        <%= f.label :email %><br />
    </strong>

    <%= f.email_field :email, autofocus: true, autocomplete: "email",  class: 'form-control form-control-lg', placeholder: t('email') %>
    <% if resource.errors[:email].size > 0 %>
      <span class='text text-danger'>
        *<%= resource.errors[:email].first %>
      </span>
    <% end %>
  </div>

  <div class="field form-label mb-3">
    <strong>
      <%= f.label :password %>
    </strong>
    <%= f.password_field :password, autocomplete: "new-password",  class: 'form-control form-control-lg', placeholder: t('password') %>
    <% if resource.errors[:password].size > 0 %>
      <span class='text text-danger'>
        *<%= resource.errors[:password].first %>
      </span>
    <% end %>
  </div>

  <div class="field form-label mb-3">
    <strong>
        <%= f.label :password_confirmation %><br />
    </strong>
    <%= f.password_field :password_confirmation, autocomplete: "new-password",  class: 'form-control form-control-lg', placeholder: t('confirm_your_password') %>
    <% if resource.errors[:password].size > 0 %>
      <span class='text text-danger'>
        *<%= resource.errors[:password].first %>
      </span>
    <% end %>
  </div>

  <div class="actions d-flex flex-column mx-auto w-25">
    <%= f.submit t('signup'), class: 'btn btn-primary' %>
  </div>
<% end %>
</div>
