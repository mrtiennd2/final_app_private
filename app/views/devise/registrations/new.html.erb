<div class='container d-flex flex-column align-items-center'>
    <h1 class='text text-secondary my-4'>Fotobook Signup</h1>

    <%= form_for(
        resource, as: resource_name,
        url: registration_path(resource_name),
        html: {
            class: 'w-50 p-5 border rounded shadow rounded bg-light',
        }
    ) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="field form-label mb-3">
        <!-- <strong> -->
        <!--     <%= f.label :email %><br /> -->
        <!-- </strong> -->
        <%= f.email_field :email, autofocus: true, autocomplete: "email",  class: 'form-control form-control-lg', placeholder: 'Email' %>
    </div>

    <div class="field form-label mb-3">
        <!-- <strong> -->
        <!--     <%= f.label :password %> -->
        <!-- </strong> -->
        <!-- <% if @minimum_password_length %> -->
        <!--     <em>(<%= @minimum_password_length %> characters minimum)</em> -->
        <!-- <% end %> -->
        <%= f.password_field :password, autocomplete: "new-password",  class: 'form-control form-control-lg', placeholder: 'Password' %>
    </div>

    <div class="field form-label mb-3">
        <!-- <strong> -->
        <!--     <%= f.label :password_confirmation %><br /> -->
        <!-- </strong> -->
        <%= f.password_field :password_confirmation, autocomplete: "new-password",  class: 'form-control form-control-lg', placeholder: 'Confirm your password' %>
    </div>

    <div class="actions d-flex flex-column mx-auto w-25">
        <%= f.submit "Sign up", class: 'btn btn-primary' %>
    </div>
    <% end %>
</div>
