<% if !action_name.in?('user_photos') && !action_name.in?('user_albums') %>
  <% active = 'btn-primary text-white' %>
  <% inactive = 'btn-white border-1 border-primary text-primary' %>
  <% in_photos = controller_name.in?('photos') ? active : inactive %>
  <% in_albums = controller_name.in?('albums') ? active : inactive %>

  <div class='d-flex justify-content-center py-3'>
    <a class="btn rounded-0 <%= in_photos %>" href="/photos">
      <strong>
        Photo
      </strong>
    </a>
    <a class="btn rounded-0 <%= in_albums %>" href="/albums">
      <strong>
        Album
      </strong>
    </a>
  </div>
<% end %>
